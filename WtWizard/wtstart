#!/bin/bash


trap 'kill -TERM $PID' TERM INT

export DAQDIR=/home/acqilc/SDHCAL
source ${DAQDIR}/bashrc
cd  ${DAQDIR}/WtWizard/
export LD_LIBRARY_PATH=.:./lib:$LD_LIBRARY_PATH
./wlevb --docroot . --http-address `hostname -i` --http-port 8090 &

PID=$!
wait $PID
trap - TERM INT
wait $PID
EXIT_STATUS=$?
